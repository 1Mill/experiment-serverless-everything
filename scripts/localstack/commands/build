#!/usr/bin/env bash
set -e

function build() {
	# * Props
	local path=$1

	# * Load config variables into environment
	local config_path=$(pwd)/$path/$LAMBDA_CONFIG_FILENAME
	source $config_path

	# * Compute values
	local dir=$(pwd)/$path
	local function_name=$FUNCTION_NAME

	# * Run command
	docker build --tag $function_name $dir
}

build "$1"
